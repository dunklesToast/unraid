{
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "chore(release): v${version}",
    "assets": ["dist.zip"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "npm": {
    "skipChecks": true
  }
}
